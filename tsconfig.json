{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "locale": "en",
        "module": "commonjs",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "baseUrl": "src",
        "outDir": "dist",
        "pretty": true,
        "sourceMap": true
    },
    "exclude": ["node_modules"]
}

